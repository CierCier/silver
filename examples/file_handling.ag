import std.io;
import std.file;

i32 main() {
    
    File f = File.open("hello.txt", "w");
    f.write_str("Hello, Silver!\n");
    f.close();
    
    File r = File.open("hello.txt", "r");
    printf("Size: %ld bytes\n", r.size());
    
    i32 ch = r.read_char();
    while (ch != -1) {
        printf("%c", ch);
        ch = r.read_char();
    }
    r.close();
    
    return 0;
}